<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quisactivity"
    android:background="@drawable/background4">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scrollbars="none"
        android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/pertanyaankuis"
        android:layout_width="569dp"
        android:layout_height="122dp"
        android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="400dp"
        android:layout_height="240dp">

    <RadioButton
        android:id="@+id/pilihanA"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="pilihan1"
        android:textSize="25dp"
        android:checked="true" />
    <RadioButton
        android:id="@+id/pilihanB"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="pilihan2"
        android:textSize="25dp" />
    <RadioButton
        android:id="@+id/pilihanC"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="pilihan3"
        android:textSize="25dp"/>
    <RadioButton
        android:id="@+id/pilihanD"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="pilihan4"
        android:textSize="25dp" />
    </RadioGroup>
    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="next"
        android:textSize="25dp"
        android:onClick="next"/>
        </LinearLayout>
    </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonexit"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exit"/>
</RelativeLayout>